		<mods>
			<li>Combat Shields</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="CTB_AT_Equipment.EquipmentRestrictionsPatcher">
					<itemLevelRules>
						<li>
							<thingDef>Apparel_NguniShield</thingDef>
