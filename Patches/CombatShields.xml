	<!-- Traditional shields: Neolithic (intuitive to use - just hold up to block) -->
	<!-- Modern shields with components/sensors: Industrial (complex mechanisms) -->
	<!-- Spacer shields: Spacer (advanced technology) -->
	
	<!--====================== TRADITIONAL SHIELDS ======================-->
	
