<Patch>
	<!-- Vanilla Factions Expanded - Tribals Compatibility Rules -->
	<!-- Tribal weapons and armor designed for neolithic tech level pawns -->
	
	<!--====================== WEAPONS ======================-->
	
	<!-- Ranged Neolithic Weapons -->
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Factions Expanded - Tribals</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="CTB_AT_Equipment.EquipmentRestrictionsPatcher">
					<itemLevelRules>
						<li>
							<thingDef>VFET_Throwspikes</thingDef>
							<techLevelNoResearch>Neolithic</techLevelNoResearch>
							<techLevelResearched>Neolithic</techLevelResearched>
						</li>
					</itemLevelRules>
				</li>
			</operations>
		</match>
